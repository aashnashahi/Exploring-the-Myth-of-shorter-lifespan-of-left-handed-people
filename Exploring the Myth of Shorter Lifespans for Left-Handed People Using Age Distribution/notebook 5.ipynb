#!/usr/bin/env python3
"""
survival_analysis.py

Bayesian reanalysis of the apparent left-handed lifespan gap using
(1) Gilbert & Wysocki left-handedness rates (digitized),
(2) US death distribution (1999),
and (3) Monte Carlo sampling to assess sampling variability.

Saves plots and summaries to ./outputs/
"""
import os
import argparse
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

OUTDIR = "outputs"
os.makedirs(OUTDIR, exist_ok=True)

LH_URL = ("https://gist.githubusercontent.com/mbonsma/8da0990b71ba9a09f7de395574e54df1/"
          "raw/aec88b30af87fad8d45da7e774223f91dad09e88/lh_data.csv")
DEATH_URL = ("https://gist.githubusercontent.com/mbonsma/2f4076aab6820ca1807f4e29f75f18ec/"
             "raw/62f3ec07514c7e31f5979beeca86f19991540796/cdc_vs00199_table310.tsv")

def load_data():
    lh = pd.read_csv(LH_URL)
    lh["Birth_year"] = 1986 - lh["Age"]
    lh["Mean_lh"] = lh[["Female", "Male"]].mean(axis=1)
    deaths = pd.read_csv(DEATH_URL, sep="\t", skiprows=[1])
    deaths = deaths.dropna(subset=["Both Sexes"]).reset_index(drop=True)
    deaths["Age"] = deaths["Age"].astype(int)
    return lh, deaths

def P_lh_given_A(ages_of_death, lefthanded_data, study_year=1990):
    ages = np.asarray(ages_of_death, dtype=int)
    early_1900s_rate = lefthanded_data["Mean_lh"].iloc[-10:].mean()
    late_1900s_rate = lefthanded_data["Mean_lh"].iloc[:10].mean()
    byears = study_year - ages
    lh_map = lefthanded_data.set_index("Birth_year")["Mean_lh"].to_dict()
    res = np.zeros_like(ages, dtype=float)
    min_by = lefthanded_data["Birth_year"].min()
    max_by = lefthanded_data["Birth_year"].max()
    for i, by in enumerate(byears):
        if by < min_by:
            res[i] = early_1900s_rate / 100.0
        elif by > max_by:
            res[i] = late_1900s_rate / 100.0
        else:
            try:
                res[i] = lh_map[int(by)] / 100.0
            except KeyError:
                nearest = min(lh_map.keys(), key=lambda k: abs(k - by))
                res[i] = lh_map[nearest] / 100.0
    return res

def P_lh(death_distribution, lefthanded_data, study_year=1990):
    ages = death_distribution["Age"].to_numpy(dtype=int)
    p_lh_a = P_lh_given_A(ages, lefthanded_data, study_year)
    weights = death_distribution["Both Sexes"].to_numpy(dtype=float)
    return (weights * p_lh_a).sum() / weights.sum()

def P_A_given_lh(ages, death_distribution, lefthanded_data, study_year=1990):
    ages = np.asarray(ages, dtype=int)
    age_index = death_distribution.set_index("Age")["Both Sexes"].to_dict()
    P_A = np.array([age_index.get(int(a), 0.0) for a in ages], dtype=float)
    if P_A.sum() == 0:
        return np.zeros_like(P_A)
    P_A = P_A / P_A.sum()
    P_left = P_lh(death_distribution, lefthanded_data, study_year)
    P_lh_A = P_lh_given_A(ages, lefthanded_data, study_year)
    with np.errstate(divide='ignore', invalid='ignore'):
        res = (P_lh_A * P_A) / P_left
    res = np.nan_to_num(res)
    if res.sum() > 0:
        res = res / res.sum()
    return res

def P_A_given_rh(ages, death_distribution, lefthanded_data, study_year=1990):
    ages = np.asarray(ages, dtype=int)
    age_index = death_distribution.set_index("Age")["Both Sexes"].to_dict()
    P_A = np.array([age_index.get(int(a), 0.0) for a in ages], dtype=float)
    if P_A.sum() == 0:
        return np.zeros_like(P_A)
    P_A = P_A / P_A.sum()
    P_right = 1.0 - P_lh(death_distribution, lefthanded_data, study_year)
    P_rh_A = 1.0 - P_lh_given_A(ages, lefthanded_data, study_year)
    with np.errstate(divide='ignore', invalid='ignore'):
        res = (P_rh_A * P_A) / P_right
    res = np.nan_to_num(res)
    if res.sum() > 0:
        res = res / res.sum()
    return res

def mc_sample_gaps(death_distribution, lefthanded_data, study_year=1990, sample_size=2000, n_sims=2000, random_seed=123):
    rng = np.random.default_rng(random_seed)
    ages_pop = death_distribution["Age"].to_numpy(dtype=int)
    weights = death_distribution["Both Sexes"].to_numpy(dtype=float)
    probs = weights / weights.sum()
    p_lh_by_age = dict(zip(ages_pop, P_lh_given_A(ages_pop, lefthanded_data, study_year)))
    gaps = np.empty(n_sims, dtype=float)
    mean_lh = np.empty(n_sims, dtype=float)
    mean_rh = np.empty(n_sims, dtype=float)
    for i in range(n_sims):
        sampled_ages = rng.choice(ages_pop, size=sample_size, p=probs)
        is_lh = np.array([rng.random() < p_lh_by_age.get(int(a), 0.0) for a in sampled_ages])
        lh_mean = sampled_ages[is_lh].mean() if is_lh.sum() > 0 else np.nan
        rh_mean = sampled_ages[~is_lh].mean() if (~is_lh).sum() > 0 else np.nan
        mean_lh[i] = lh_mean
        mean_rh[i] = rh_mean
        gaps[i] = lh_mean - rh_mean
    return gaps, mean_lh, mean_rh

def run_analysis(study_year=1990, n_sims=2000, sample_size=2000, seed=123):
    lh_data, death_dist = load_data()
    ages = np.arange(6, 115, 1)

    pA_lh = P_A_given_lh(ages, death_dist, lh_data, study_year)
    pA_rh = P_A_given_rh(ages, death_dist, lh_data, study_year)
    avg_lh = np.nansum(ages * pA_lh)
    avg_rh = np.nansum(ages * pA_rh)
    gap = avg_lh - avg_rh
    print(f"Study year {study_year}: avg_lh={avg_lh:.4f}, avg_rh={avg_rh:.4f}, gap (LH - RH)={gap:.4f} years")

    plt.figure(figsize=(8,5))
    plt.plot(ages, pA_lh, label="P(A|LH)")
    plt.plot(ages, pA_rh, label="P(A|RH)")
    plt.xlabel("Age at death")
    plt.ylabel("Probability")
    plt.legend()
    plt.title(f"P(A|LH) and P(A|RH) for study year {study_year}")
    plt.tight_layout()
    plt.savefig(os.path.join(OUTDIR, f"PA_LH_RH_{study_year}.png"), dpi=150)
    plt.close()

    gaps, mean_lh_samples, mean_rh_samples = mc_sample_gaps(death_dist, lh_data, study_year, sample_size, n_sims, seed)
    mean_gap = np.nanmean(gaps)
    sd_gap = np.nanstd(gaps)
    pct_ge_9 = np.mean(gaps >= 9.0) * 100.0
    pct_le_minus9 = np.mean(gaps <= -9.0) * 100.0

    print(f"MC (n_sims={n_sims}, sample_size={sample_size}): mean gap={mean_gap:.4f}, sd={sd_gap:.4f}")
    print(f"Percent sims with gap >= 9 years: {pct_ge_9:.4f}%")
    print(f"Percent sims with gap <= -9 years: {pct_le_minus9:.4f}%")

    plt.figure(figsize=(7,5))
    plt.hist(gaps[~np.isnan(gaps)], bins=60, alpha=0.9)
    plt.axvline(x=gap, color='red', linestyle='--', label=f"theoretical gap={gap:.2f}")
    plt.xlabel("LH mean age - RH mean age (years)")
    plt.ylabel("Frequency")
    plt.title(f"Simulated sampling distribution of mean-age gap\nstudy_year={study_year}, sample_size={sample_size}")
    plt.legend()
    plt.tight_layout()
    plt.savefig(os.path.join(OUTDIR, f"gap_hist_{study_year}.png"), dpi=150)
    plt.close()

    with open(os.path.join(OUTDIR, f"summary_{study_year}.txt"), "w") as fh:
        fh.write(f"Study year: {study_year}\n")
        fh.write(f"Avg LH age: {avg_lh:.6f}\n")
        fh.write(f"Avg RH age: {avg_rh:.6f}\n")
        fh.write(f"Theoretical gap (LH - RH): {gap:.6f}\n\n")
        fh.write(f"Monte Carlo (n_sims={n_sims}, sample_size={sample_size}):\n")
        fh.write(f"Mean gap: {mean_gap:.6f}\n")
        fh.write(f"SD gap: {sd_gap:.6f}\n")
        fh.write(f"Pct sims gap >= 9.0 years: {pct_ge_9:.6f}%\n")
        fh.write(f"Pct sims gap <= -9.0 years: {pct_le_minus9:.6f}%\n")

    if study_year != 2018:
        pA_lh_2018 = P_A_given_lh(ages, death_dist, lh_data, 2018)
        pA_rh_2018 = P_A_given_rh(ages, death_dist, lh_data, 2018)
        avg_lh_2018 = np.nansum(ages * pA_lh_2018)
        avg_rh_2018 = np.nansum(ages * pA_rh_2018)
        gap_2018 = avg_lh_2018 - avg_rh_2018
        with open(os.path.join(OUTDIR, f"summary_2018.txt"), "w") as fh:
            fh.write(f"Study year: 2018\n")
            fh.write(f"Avg LH age: {avg_lh_2018:.6f}\n")
            fh.write(f"Avg RH age: {avg_rh_2018:.6f}\n")
            fh.write(f"Theoretical gap (LH - RH): {gap_2018:.6f}\n")
        print(f"2018: avg_lh={avg_lh_2018:.4f}, avg_rh={avg_rh_2018:.4f}, gap={gap_2018:.4f}")

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Left-handedness age-gap analysis")
    parser.add_argument("--study_year", type=int, default=1990)
    parser.add_argument("--n_sims", type=int, default=2000)
    parser.add_argument("--sample_size", type=int, default=2000)
    parser.add_argument("--seed", type=int, default=123)
    args = parser.parse_args()
    run_analysis(study_year=args.study_year, n_sims=args.n_sims, sample_size=args.sample_size, seed=args.seed)
